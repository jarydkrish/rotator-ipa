{
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	// Features to add if you want them
	// "features": {},
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"rebornix.Ruby"
			]
		}
	},
	// Forward ports to make them available
	"forwardPorts": [3000, 5432, 6379],

	// Use 'postStartCommand' to run commands after the container is created.
	"postStartCommand": "nvm install $(cat .node-version) && bundle install && yarn install"
}
