<% content_for :head do %>
  <meta property="og:title" content="Beers at Rotator IPA">
  <meta property="og:description" content="No. They aren't all ready to drink yet.">
  <meta property="og:image" content="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
  <meta property="og:url" content="https://rotatoripa.co/beers">
  <meta name="twitter:title" content="Beers at Rotator IPA">
  <meta name="twitter:description" content="No. They aren't all ready to drink yet.">
  <meta name="twitter:image" content="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
  <meta name="twitter:card" content="summary_large_image">
  <link itemprop="thumbnailUrl" href="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
<% end %>

<%= render partial: 'beers/header' %>

<div class="relative pb-20 px-4 sm:px-6 lg:pb-28 lg:px-8">
  <div class="absolute inset-0">
    <div class="bg-white h-1/3 sm:h-2/3"></div>
  </div>
  <div class="relative max-w-7xl mx-auto">
    <div class="text-center">
      <h2 class="text-3xl leading-9 tracking-tight font-extrabold text-gray-900 sm:text-4xl sm:leading-10">
        Beers we're brewing
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl leading-7 text-gray-500 sm:mt-4">
        We cycle out beers every two weeks, so be sure to check back!
      </p>
    </div>
    <%= render partial: 'beers/index/beers', locals: { beers: @beers } %>
  </div>
</div>


<div class="flex justify-center">
  <% unless @beers.first_page? %>
    <%= link_to_previous_page @beers, 'Previous Page' %>
  <% end %>
  <% if @beers.current_page < @beers.total_pages && @beers.current_page > 1 %>
    <span class="mx-2">|</span>
  <% end %>
  <% unless @beers.last_page? %>
    <%= link_to_next_page @beers, 'Next Page' %>
  <% end %>
</div>

<div class="flex justify-center mt-4">
  <span>
    <%= page_entries_info @beers %>
  </span>
</div>



<%= render partial: 'pages/footer' %>
