<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
  <div class="flex-shrink-0">
    <div class="relative h-48 w-full flex justify-center items-center">
      <%= render partial: 'beers/shared/beer_chart', locals: { beer: beer } %>
    </div>
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between z-10">
    <div class="flex-1">
      <p class="text-sm leading-5 font-medium text-indigo-600">
        <a href="<%= beer_path(beer) %>" class="hover:underline">
          <%= beer.kind %>
        </a>
      </p>
      <a href="<%= beer_path(beer) %>" class="block">
        <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
          <%= beer.name %>
        </h3>
        <p class="mt-3 text-base leading-6 text-gray-500">
          <%= beer.description %>
        </p>
      </a>
    </div>
  </div>
</div>
