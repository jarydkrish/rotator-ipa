<% content_for :head do %>
  <meta property="og:title" content="Rotator IPA Blog">
  <meta property="og:description" content="Notes on brewing the beer you probably might want.">
  <meta property="og:image" content="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
  <meta property="og:url" content="https://rotatoripa.co/posts">
  <meta name="twitter:title" content="Rotator IPA">
  <meta name="twitter:description" content="Notes on brewing the beer you probably might want.">
  <meta name="twitter:image" content="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
  <meta name="twitter:card" content="summary_large_image">
  <link itemprop="thumbnailUrl" href="https://rotatoripa.co/rotator-ipa-sharing-icon.png">
<% end %>

<%= render partial: 'posts/header' %>

<div class="relative bg-gray-50 pb-20 px-4 sm:px-6 lg:pb-28 lg:px-8">
  <div class="absolute inset-0">
    <div class="bg-white h-1/3 sm:h-2/3"></div>
  </div>
  <div class="relative max-w-7xl mx-auto">
    <div class="text-center">
      <h2 class="text-3xl leading-9 tracking-tight font-extrabold text-gray-900 sm:text-4xl sm:leading-10">
        Hits from the blog
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl leading-7 text-gray-500 sm:mt-4">
        Some tidbits we've been working on. We've had some interesting experiences brewing beer.
      </p>
    </div>
    <%= render partial: 'posts/index/posts', locals: { posts: @posts } %>
  </div>
</div>

<div class="flex justify-center">
  <% unless @posts.first_page? %>
    <%= link_to_previous_page @posts, 'Previous Page' %>
  <% end %>
  <% if @posts.current_page < @posts.total_pages && @posts.current_page > 1 %>
    <span class="mx-2">|</span>
  <% end %>
  <% unless @posts.last_page? %>
    <%= link_to_next_page @posts, 'Next Page' %>
  <% end %>
</div>

<div class="flex justify-center mt-4">
  <span>
    <%= page_entries_info @posts %>
  </span>
</div>

<%= render partial: 'pages/footer' %>
